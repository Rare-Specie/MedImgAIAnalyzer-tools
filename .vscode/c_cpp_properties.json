{
  "version": 4,
  "configurations": [
    {
      "name": "macOS-clang",
      "intelliSenseMode": "macos-clang-x64",
      "compilerPath": "/usr/bin/clang++",
      "cStandard": "c11",
      "cppStandard": "c++17",
      "includePath": [
        "${workspaceFolder}/**",
        "/opt/homebrew/include",
        "/opt/homebrew/include/opencv4"
      ],
      "browse": {
        "path": [
          "${workspaceFolder}/**",
          "/opt/homebrew/include",
          "/opt/homebrew/include/opencv4"
        ],
        "limitSymbolsToIncludedHeaders": true
      }
    }
  ]
}
